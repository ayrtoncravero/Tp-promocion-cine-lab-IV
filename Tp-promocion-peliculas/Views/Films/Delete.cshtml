@model Tp_promocion_peliculas.Models.Film

@{
    ViewData["Title"] = "Borrar - pelicula";
}

<h1>Borrar pelicula</h1>

<h3>¿Estás seguro de que quiere borrar esto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            <img src="~/images/Movies/@Model.Photo" alt="Imagen de pelicula" width="200" height="250" asp-append-version="true" />
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trailer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trailer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genders)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genders.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.billboard)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.billboard)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>

